<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip"
    android:id="@+id/relativeLayout31">
    <!--android:background="@drawable/list_selector"-->

    <TextView
        android:id="@+id/arrow_up_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:clickable="true"
        android:text="▲"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/point_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="45dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="10"
        app:layout_constraintStart_toStartOf="@id/arrow_up_txv"
        app:layout_constraintEnd_toEndOf="@id/arrow_up_txv"
        app:layout_constraintTop_toBottomOf="@id/arrow_up_txv"/>

    <TextView
        android:id="@+id/arrow_down_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:clickable="true"
        android:text="▼"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_edt" />


    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:text="點 "
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/arrow_down_txv"
        app:layout_constraintStart_toEndOf="@+id/arrow_down_txv"
        app:layout_constraintBottom_toTopOf="@+id/arrow_down_txv" />

    <TextView
        android:id="@+id/point_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="1"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/textView31"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView31"
        app:layout_constraintBottom_toBottomOf="@+id/textView31"
        app:layout_constraintStart_toEndOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 小時"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/point_txv"
        app:layout_constraintBaseline_toBaselineOf="@+id/point_txv"
        app:layout_constraintBottom_toBottomOf="@+id/point_txv"
        app:layout_constraintStart_toEndOf="@+id/point_txv" />


</android.support.constraint.ConstraintLayout>